            <Button
                x:Name="ContrastSettingsButton"
                Grid.Column="0"
                Width="180"
                Height="30"
                BorderBrush="White"
                BorderThickness="1"
                Background="Transparent"
                Foreground="White"
                HorizontalAlignment="Right"
                Margin="5"
                VerticalAlignment="Center"
                Command="{Binding Path=ShowPreviewContrastCommand}">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Images/Imaging/icon_contrast-default.png"
                           Height="25"/>
                    <TextBlock Text="CONTRAST SETTINGS" Margin="10,5,0,0" />
                </StackPanel>
            </Button>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="1"
              Background="#2E3440">
            <!--  Channels preview  -->
            <Grid>
                <views:PreviewChannels
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    IsContrastChannelAllowed="False"
                    ButtonsOrientation="Vertical"
                    ButtonsMargin="0,0,0,6"
                    DataContext="{Binding}" />
            </Grid>
        </Grid>
        <!--<Grid Grid.Column="2"
              Grid.RowSpan="4"
              Background="#1D212A">
        </Grid>-->
    </Grid>

</UserControl>
