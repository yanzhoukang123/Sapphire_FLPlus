                            </Grid.RowDefinitions>

                            <Border Grid.Row="0"
              BorderThickness="1"
              BorderBrush="#25A0DA"
              Background="#25A0DA">
                                <Label Foreground="White">
                                    <ContentPresenter Margin="4"
                          ContentSource="Header"
