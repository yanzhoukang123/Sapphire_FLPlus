<Window x:Class="Azure.LaserScanner.AnimationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:extToolkit="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True"
        Width="240"
        Height="110">
    
    <Grid x:Name="_BusyIndicatorContainer"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
        <extToolkit:BusyIndicator x:Name="_BusyIndicator"
                IsBusy="True" >
        </extToolkit:BusyIndicator>
    </Grid>
</Window>
